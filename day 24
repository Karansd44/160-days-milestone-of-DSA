class Solution {

    public int solve(int n , int nums, int x){
        if(n==0) return 1;
        if(n <0 || (int) Math.pow(nums,x) > n) return 0;
        int take = solve(n-(int) Math.pow(nums,x),nums+1,x);
        int skip = solve(n,nums+1,x);
        return take+skip;

    }
    public int numberOfWays(int n, int x) {
        return solve(n,1,x);
    }
}